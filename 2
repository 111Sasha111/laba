#include <iostream>//библиотека ввода-вывода
#include <cstdlib>//библиотека для работы с памятью
using namespace std;//использование пространства имен стандартной библиотеки

void bubbleSort(int arr[], int n){//функция сортировки пузырьком, принимающая массив и его размер

    for(int i=0; i<n-1; i++){//цикл до текущего последнего элемента массива
        for(int j=0; j<n-i-1; j++){//цикл до текущего последнего элемента массива минус i 
            if(arr[j]>arr[j+1]){//если текущий элемент больше следующего
                int temp=arr[j];//создание временной переменной и присваивание ей текущего элемента
                arr[j]=arr[j+1];//присвоение текущему элементу следующий элемент
                arr[j+1]=temp;//присвоение следующему элементу текущий элемент

            }

        }

    }

}

int main(){//главная функция

    int n;//объявление переменной для размера массива
    cout<<"Enter the size of array: ";//вывод сообщения пользователю
    cin>>n;//ввод размера массива
    int* arr=(int*)malloc(n*sizeof(int));//выделение динамической памяти для массива
    cout<<"Enter the elements of array: ";//вывод сообщения пользователю
    for(int i=0; i<n; i++)//цикл для ввода элементов массива
        cin>>arr[i];

    bubbleSort(arr, n);//вызов функции сортировки пузырьком с передачей массива и его размера в качестве аргументов

    cout<<"Sorted array: ";//вывод сообщения пользователю
    for(int i=0; i<n; i++)//цикл для вывода отсортированного массива
        cout<<arr[i]<<" ";//вывод текущего элемента массива
    free(arr);//освобождение динамической памяти, занятой массивом
    return 0;//успешное завершение программы с кодом 0

}
